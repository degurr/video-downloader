{
  "manifest_version": 3,
  "name": "Personal Downloader",
  "version": "1.0.0",
  "description": "YouTube / Bilibili / Instagram downloader (personal use)",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.bilibili.com/*",
        "https://www.instagram.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}